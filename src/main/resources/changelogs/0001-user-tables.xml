<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

        <changeSet id="1" author="Bethany Armitage" context="prod or dev or test">
        <createTable schemaName="public" tableName="user" remarks="User data">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints unique="false" nullable="false" />
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints unique="false" nullable="false" />
            </column>
            <column name="email" type="varchar(255)">
                <constraints unique="true" nullable="false" />
            </column>
            <column name="date_created" type="timestamp with time zone" defaultValue="NOW()">
                <constraints nullable="false" />
            </column>
            <column name="date_deactivated" type="timestamp with time zone" defaultValue="null">
                <constraints nullable="true" />
            </column>
        </createTable>

        <createTable schemaName="public" tableName="user_account_settings" remarks="User data">
            <column name="user_id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_account_settings" type="integer">
                <constraints unique="false" nullable="false" />
            </column>
            <column name="sessions_json" type="json">
                <constraints unique="false" nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="user_id"
            baseTableName="user_account_settings"
            constraintName="fk_account_settings_to_user"
            deferrable="false"
            initiallyDeferred="false"
            onDelete="CASCADE"
            onUpdate="RESTRICT"
            referencedColumnNames="id"
            referencedTableName="user" />
    </changeSet>

</databaseChangeLog>
